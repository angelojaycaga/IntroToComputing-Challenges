//CSS//
/* Styling for the block-level element with an ID */
#blockElement {
    background-color: lightblue;
    padding: 10px;
    margin: 10px;
}

/* Styling for the inline element with a class */
.inlineElement {
    color: green;
    font-weight: bold;
}

/* Styling for the block-level element with a class */
.blockClass {
    background-color: lightcoral;
    padding: 15px;
    margin: 15px;
}

/* Styling for the inline element with an ID */
#inlineId {
    color: purple;
    font-style: italic;
}
